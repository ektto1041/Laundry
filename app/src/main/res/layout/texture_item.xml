<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/texture_item_container_width"
    android:layout_height="@dimen/texture_item_container_height">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/texture_item_width"
        android:layout_height="@dimen/texture_item_height"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/pastel_green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
            android:id="@+id/texture_name"
            android:layout_width="@dimen/texture_item_text_width"
            android:layout_height="@dimen/texture_item_height"
            android:text="폴리에스터"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/texture_item_x_button"
            android:layout_width="@dimen/texture_item_x_width"
            android:layout_height="@dimen/texture_item_height"
            android:src="@drawable/ic_x"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:layout_marginEnd="@dimen/texture_item_x_margin_end"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>